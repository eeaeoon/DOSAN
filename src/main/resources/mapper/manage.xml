<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="manage">
	<select id="list" resultType="Map" parameterType="Map" timeout="10">
		select 
			ACCOUNT_NUM			<!-- 조직 일련번호 -->
			, NAME			<!-- 명칭 -->
			, VALUE			<!-- 대표 전화번호 -->
			, BANK_NAME			<!-- 정렬순서 -->
		from ACCOUNT
		
	</select>

	<select id="read" resultType="Map" parameterType="Map">
		select *
		from ACCOUNT
		where ID = #{ACCOUNT_NUM}
	</select>
<!--
	<insert id="update" parameterType="Map">
	    update ACCOUNT 
		set VALUE = VALUE - #{VALUE} 			
			where ACCOUNT_NUM = #{ACCOUNT_NUM}
	</insert>
-->
	<insert id="insert" parameterType="Map">
	    INSERT INTO CIP_ORGANIZATION (
			ORGANIZATION_SEQ			<!-- 조직 일련번호 -->
			, NAME			<!-- 명칭 -->
			, TELEPHONE			<!-- 대표 전화번호 -->
			, ORDER_NUMBER			<!-- 정렬순서 -->
			, PARENT_ORGANIZATION_SEQ			<!-- 상위 조직 일련번호 -->
		)
		values(
			#{ORGANIZATION_SEQ}			<!-- 조직 일련번호 -->
			, #{NAME}			<!-- 명칭 -->
			, #{TELEPHONE}			<!-- 대표 전화번호 -->
			, #{ORDER_NUMBER}			<!-- 정렬순서 -->
			, null			<!-- 상위 조직 일련번호 -->
		)
	</insert>

	<delete id="delete" parameterType="Map">
		delete from CIP_ORGANIZATION
		where ORGANIZATION_SEQ = #{ORGANIZATION_SEQ}
	</delete>
</mapper>